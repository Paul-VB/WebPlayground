{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start npm dev server",
      "type": "npm",
      "script": "dev",
      "isBackground": true,
      "problemMatcher": {
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "VITE v",
          "endsPattern": "Local:"
        }
      }
    },
    {
      "label": "Kill npm dev server",
      "type": "shell",
      "command": "Get-Process -Id (Get-NetTCPConnection -LocalPort 5173).OwningProcess | Stop-Process -Force",
      "problemMatcher": []
    }
  ]
}